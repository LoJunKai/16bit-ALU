module decimal_counter (
    input binary[4],
    output decimal[2][4]
  ) {

  always {
    if (binary <= 4h9) {
      // under 9 -> store as binary
      decimal[0] = binary;
      decimal[1] = 4h0;
    } else {
      // above 9, split into first and second
      decimal[0] = binary - 4h9;
      decimal[1] = 4h1;
}
